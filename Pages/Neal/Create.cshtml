@page
@model FrisbeeGolfCourseMap.Pages.Neal.CreateModel

@{
    ViewData["Title"] = "Create";
}

<head>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700;900&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background: rgb(108,159,180);
            background: linear-gradient(180deg, rgba(108,159,180,0.5943511193539917) 5%, rgba(129,138,140,0.8744631641719187) 100%);
        }

        .saveButton {
            background-color: #94AFF2;
            border: solid black 2px;
            border-radius: 5px;
            width: max-content;
            padding: 2px 8px 2px 8px;
            /*margin-left: 5px;*/
            margin-right: 5px;
        }

            .saveButton:hover {
                background-color: #ABD996;
                text-decoration: none;
                color: black;
                transition: all 0.3s ease;
            }
    </style>
</head>
<body>
    <div class="jumbotron shadow" style="background-color: #F4F4F4; border-radius: 25px;">
        <h1>Create Course</h1>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Course.Name" class="control-label"></label>
                        <input asp-for="Course.Name" class="form-control" />
                        <span asp-validation-for="Course.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Course.Alias" class="control-label"></label>
                        <input asp-for="Course.Alias" class="form-control" />
                        <span asp-validation-for="Course.Alias" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Course.Location" class="control-label"></label>
                        <input asp-for="Course.Location" class="form-control" />
                        <span asp-validation-for="Course.Location" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Course.Difficulty" class="control-label"></label>
                        <input asp-for="Course.Difficulty" class="form-control" />
                        <span asp-validation-for="Course.Difficulty" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Course.NumberOfHoles" class="control-label"></label>
                        <input asp-for="Course.NumberOfHoles" class="form-control" />
                        <span asp-validation-for="Course.NumberOfHoles" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Course.TimeToComplete" class="control-label"></label>
                        <input asp-for="Course.TimeToComplete" class="form-control" />
                        <span asp-validation-for="Course.TimeToComplete" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Course.ThrowTotal" class="control-label"></label>
                        <input asp-for="Course.ThrowTotal" class="form-control" />
                        <span asp-validation-for="Course.ThrowTotal" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Course.Description" class="control-label"></label>
                        <input asp-for="Course.Description" class="form-control" />
                        <span asp-validation-for="Course.Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="saveButton" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-page="Index">Back to List</a>
        </div>

    </div>

</body>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
