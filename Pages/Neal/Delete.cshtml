@page
@model FrisbeeGolfCourseMap.Pages.Neal.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<head>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700;900&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background: rgb(108,159,180);
            background: linear-gradient(180deg, rgba(108,159,180,0.5943511193539917) 5%, rgba(129,138,140,0.8744631641719187) 100%);
        }

        .saveButton {
            background-color: #e33936;
            border: solid black 2px;
            border-radius: 5px;
            width: max-content;
            padding: 2px 8px 2px 8px;
            /*margin-left: 5px;*/
            margin-right: 5px;
        }

            .saveButton:hover {
                background-color: #eb7d7b;
                text-decoration: none;
                color: black;
                transition: all 0.3s ease;
            }
    </style>
</head>
<body>
    <div class="jumbotron shadow" style="background-color: #F4F4F4; border-radius: 25px;">
        <h1>Delete</h1>
        <h3>Are you sure you want to delete this?</h3>
        <div>
            <h4>Course</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Course.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Course.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Course.Alias)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Course.Alias)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Course.Location)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Course.Location)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Course.Difficulty)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Course.Difficulty)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Course.NumberOfHoles)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Course.NumberOfHoles)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Course.TimeToComplete)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Course.TimeToComplete)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Course.ThrowTotal)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Course.ThrowTotal)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Course.Description)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Course.Description)
                </dd>
            </dl>

            <form method="post">
                <input type="hidden" asp-for="Course.ID" />
                <input type="submit" value="Delete" class="saveButton" /> |
                <a asp-page="./Index">Back to List</a>
            </form>
        </div>
    </div>
</body>
